
.source {
  position: relative;
}
.source .swiper-wap {
  position: relative;
  height: 400rpx;
}
.source .swiper-wap swiper {
  height: 100%;
}
.source .swiper-image {
  width: 100%;
  height: 400rpx;
}
.source .swiper-dots {
  position: absolute;
  bottom: 15rpx;
  left: 0;
  z-index: 1;
  width: 100%;
  text-align: center;
  line-height: 0;
}
.source .swiper-dots .swiper-dot {
  display: inline-block;
  margin: 0 8rpx;
  width: 15rpx;
  height: 15rpx;
  background: #bababa;
  -webkit-transition: background 0.5s;
  -o-transition: background 0.5s;
  transition: background 0.5s;
  border-radius: 100%;
}
.source .swiper-dots .swiper-dot.swiper-active {
  background: #fff;
}
.source .empty-padding {
  height: 12rpx;
  background-color: #F8F8FB;
}
.source .empty-padding.ep-small {
  height: 5rpx;
}
.source .souce-image {
  width: 100%;
  z-index: 1;
}
.source .source-pan {
  position: absolute;
  width: 650rpx;
  margin: -80rpx auto 10rpx;
  padding: 30rpx 20rpx;
  z-index: 101;
  border-radius: 8rpx;
  left: 50%;
  top: 440rpx;
  overflow: hidden;
  -webkit-transform: translateX(-50%);
      -ms-transform: translateX(-50%);
          transform: translateX(-50%);
  background-color: #fff;
  -webkit-box-shadow: 2rpx 0 20rpx 3rpx rgba(0, 0, 0, 0.08);
          box-shadow: 2rpx 0 20rpx 3rpx rgba(0, 0, 0, 0.08);
}
.source .source-pan .sp-title {
  color: #333;
  font-size: 26rpx;
  font-weight: bold;
}
.source .source-pan .sp-content {
  margin: 10rpx 0 30rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 42rpx;
}
.source .content-title {
  padding: 30rpx 40rpx;
  font-size: 28rpx;
  color: #333;
  margin-top: 320rpx;
}
.source .content-title .ct-word2 {
  font-size: 26rpx;
  color: #999;
  margin-top: 10rpx;
}
.source .sl-item {
  position: relative;
  overflow: hidden;
  padding: 0 40rpx;
  margin: 30rpx 0;
}
.source .sl-item:first-of-type {
  margin-top: 0;
}
.source .sl-item .sli-ave {
  float: left;
  width: 220rpx;
  height: 180rpx;
}
.source .sl-item .sli-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-left: 240rpx;
}
.source .sl-item .sli-tips {
  font-size: 24rpx;
  color: #999;
  margin: 12rpx 0 0 240rpx;
}
.source .sl-item .sli-tips .slit-word {
  padding: 2rpx 12rpx;
  background-color: #D6E9FC;
  color: #3091f2;
  margin-right: 10rpx;
  border-radius: 8rpx;
}
.source .sl-item .sli-desc {
  position: absolute;
  left: 280rpx;
  bottom: 0;
  font-size: 24rpx;
  color: #666;
  line-height: 30rpx;
}
.source .wantOccu {
  text-align: center;
  margin: 80rpx auto 100rpx;
  font-size: 26rpx;
  color: #999;
}
