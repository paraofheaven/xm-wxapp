
.v-modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 100;
  overflow: hidden;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.v-modal-mask {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1;
  background-color: rgba(0, 0, 0, 0.4);
}
.v-modal-wrap {
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 2;
  display: block;
  overflow: hidden;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  width: auto;
  -webkit-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
      transform: translate(-50%, -50%);
  -webkit-transform-origin: 0 0;
  -ms-transform-origin: 0 0;
      transform-origin: 0 0;
}
.v-modal-wrap.v-modal-fullScreen {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  -webkit-transform: none;
  -ms-transform: none;
      transform: none;
}
.v-modal-content {
  overflow: hidden;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  border-radius: 8rpx;
  background: #fff;
}
.v-modal-content.v-modal-noRadius {
  border-radius: 0;
}
.v-modal-content.v-modal-transparent {
  background: transparent !important;
}
.v-modal-open .v-modal-content {
  -webkit-animation: zoomIn 0.4s;
  animation: zoomIn 0.4s;
  -webkit-animation-fill-mode: forwards;
  animation-fill-mode: forwards;
}
.v-modal-close .v-modal-content {
  -webkit-animation: zoomOut 0.4s;
  animation: zoomOut 0.4s;
  -webkit-animation-fill-mode: forwards;
  animation-fill-mode: forwards;
}
.v-modal-open .v-modal-mask {
  -webkit-animation: fadeIn 0.4s ease 0s;
  animation: fadeIn 0.4s ease 0s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
}
.v-modal-close .v-modal-mask {
  -webkit-animation: fadeOut 0.4s;
  animation: fadeOut 0.4s;
  -webkit-animation-fill-mode: forwards;
  animation-fill-mode: forwards;
}
@-webkit-keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
@-webkit-keyframes fadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
@keyframes fadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
@-webkit-keyframes zoomIn {
  from {
    opacity: 0;
    -webkit-transform: scale3d(0.3, 0.3, 0.3);
    transform: scale3d(0.3, 0.3, 0.3);
  }
  50% {
    opacity: 1;
  }
}
@keyframes zoomIn {
  from {
    opacity: 0;
    -webkit-transform: scale3d(0.3, 0.3, 0.3);
    transform: scale3d(0.3, 0.3, 0.3);
  }
  50% {
    opacity: 1;
  }
}
@-webkit-keyframes zoomOut {
  from {
    opacity: 1;
  }
  50% {
    opacity: 0;
    -webkit-transform: scale3d(0.3, 0.3, 0.3);
    transform: scale3d(0.3, 0.3, 0.3);
  }
  to {
    opacity: 0;
  }
}
@keyframes zoomOut {
  from {
    opacity: 1;
  }
  50% {
    opacity: 0;
    -webkit-transform: scale3d(0.3, 0.3, 0.3);
    transform: scale3d(0.3, 0.3, 0.3);
  }
  to {
    opacity: 0;
  }
}
