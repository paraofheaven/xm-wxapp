
.v-otp-modal-class {
  margin-bottom: 70%;
}
.v-otp-modal {
  position: relative;
  overflow: hidden;
  width: 600rpx;
  border-radius: 10rpx;
  background-color: #fff;
  text-align: center;
}
.v-otp-modal-close {
  position: absolute;
  top: 0;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.v-otp-modal-header {
  height: 150rpx;
  color: #333333;
  font-size: 36rpx;
  line-height: 150rpx;
}
.v-otp-modal-desc {
  margin-bottom: 16rpx;
  color: #666666;
  font-size: 28rpx;
}
.v-otp-modal-content {
  position: relative;
  height: 90rpx;
}
.v-otp-modal-number {
  display: -webkit-flex;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  margin: auto;
  width: 510rpx;
}
.v-otp-modal-number > view {
  -webkit-flex-shrink: 0;
  -ms-flex-negative: 0;
      flex-shrink: 0;
  width: 16.66%;
  height: 100%;
  color: #1FC756;
  font-size: 62rpx;
  font-family: DINAlternate-Bold;
  line-height: 90rpx;
}
.v-otp-modal-number > view text {
  display: block;
  margin: 0 10rpx;
  border-bottom: 1rpx solid #999;
}
.v-otp-modal-input {
  position: absolute;
  top: 0;
  left: -500%;
  width: 1000%;
  height: 100%;
  text-align: left;
}
.v-otp-modal-otp-wap {
  overflow: hidden;
  margin: 20rpx auto;
  width: 510rpx;
  text-align: right;
}
.v-otp-modal-otp {
  display: inline-block;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  color: #333;
  border: 1rpx solid #999;
  border-radius: 9rpx;
}
.v-otp-modal-btn {
  margin: 0;
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #e4e4e4;
  border-radius: 0;
  background-color: #fff;
  color: #1FC756;
  font-size: 36rpx;
  line-height: 100rpx;
}
.v-otp-modal-btn::after {
  border: none;
}
.v-otp-modal-btn:active {
  background-color: #f9f9f9;
}
